<!DOCTYPE html>
<html lang="en">
  {% comment %} DO NOT EDIT This file is generated from ./templates/theme.liquid
  in root. {% endcomment %}
  <head>
    {{content_for_header}}
    {% include '--it.pageDataFilename--' %}
    {% include 'head-metadata' %}
    {% include 'head-social-metadata' %}
  </head>
  <body>

    <div id="app"></div>

    <style>
      #shopifyHtml {
        width: 1px;
        height: 1px;
        position: absolute;
        top: 0;
        left: 0;
        overflow: hidden;
        opacity: 0;
      }
    </style>
    <div id="shopifyHtml">
      {{ content_for_layout }}
      {% include 'snippet-references.liquid' %} 
    </div>

    -- @if (it.serveLocally) --
    <script src="http://localhost:--it.port--/--it.bundleName--"></script>
    -- #else --
    {{ "--it.bundleName--" | asset_url | script_tag }}
    -- /if --
  </body>
</html>
