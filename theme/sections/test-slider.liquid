

  <script>
    //1612489888461
    if (!window.sections) window.sections = {};

    var sectionKey = 'Slider__{{section.id}}';

    window.sections[sectionKey] = {
      settings: {
                  'enabled': {{ section.settings.enabled }},
              },
      blocks: {
                  {% assign blocks_to_loop = section.blocks | where: 'type', 'slide' %}
          'slide': [
            {%- for block in blocks_to_loop -%}
              {
                type: "{{block.type | escape}}",
                                  'title': 
            "{{block.settings.title | escape}}"
          ,
                                  'dingo': 
            "{{block.settings.dingo | escape}}"
          ,
                                  'image': 
            "{{block.settings.image | img_url:'400x400', crop:'center' }}"
          ,
                              },
            {%- endfor -%}
          ],
                  {% assign blocks_to_loop = section.blocks | where: 'type', 'bing' %}
          'bing': [
            {%- for block in blocks_to_loop -%}
              {
                type: "{{block.type | escape}}",
                                  'image2': 
            "{{block.settings.image2 | img_url:'master'}}"
          ,
                              },
            {%- endfor -%}
          ],
              },
    };
  </script>


{% schema %}    
      {
  "name": "Slider",
  "settings": [
    {
      "type": "checkbox",
      "id": "enabled",
      "label": "Enabled!?",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "id": "dingo",
          "type": "textarea",
          "label": "Big text"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        }
      ]
    },
    {
      "type": "bing",
      "name": "Bing",
      "settings": [
        {
          "id": "image2",
          "type": "image_picker",
          "label": "Image"
        }
      ]
    }
  ]
}  {% endschema %}